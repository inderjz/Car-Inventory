            </div>
            <!-- List -->
            <ol class="container animate__animated animate__fadeInUp">
                {{#if cars.length}}
                    {{#each cars as |car|}}
                        {{>inventory-cards car}}
                    {{/each}}
            </ol>
                    {{else}}
                    <h6 class="text-center text-light font-italic m-3">You do not currently have any Cars!</h6>
                {{/if}}
        </div>
